<AdicionarVendasPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            pos_hint: {"right": 1,"top": 1}
            size_hint: 1, 0.05
            text: "Selecione o Cliente"
            id: label_selecione_cliente

        #selecione o cliente
        ScrollView:
            pos_hint: {"right":1, "top": 0.95}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_clientes
                size_hint_x: None
                height: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True

        Label:
            pos_hint: {"right": 1,"top": 0.76}
            size_hint: 1, 0.05
            text: "Selecione o Produto"
            id: label_selecione_produto

        #selecione o produto
        ScrollView:
            pos_hint: {"right":1, "top": 0.7}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_produtos
                size_hint_x: None
                height: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True

        Label:
            id: label_data
            pos_hint: {"right":1, "top": 0.5}
            size_hint: 1, 0.05   
            bold: True
            text: "Data: 01/01/2021"

        #seleciona unidade
        GridLayout:
            rows:1
            pos_hint: {"right":0.9, "top": 0.45}
            size_hint: 0.8, 0.1
            LabelButton:
                text: "Kg"
                id: unidades_kg
                on_release: app.selecionar_unidade('unidades_kg')
            LabelButton:
                text: "Unidades"
                id: unidades_unidades
                on_release: app.selecionar_unidade('unidades_unidades')
            LabelButton:
                text: "Litros"
                id: unidades_litros
                on_release: app.selecionar_unidade('unidades_litros')

        #botoes
        LabelButton:
            on_release: app.mudar_tela("homepage")
            text: "Cancelar"
            pos_hint: {"right": 0.45, "top": 0.2}
            size_hint: 0.4, 0.2
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state=="normal" else "icones/botao_apertado.png"
        LabelButton:
            on_release: app.adicionar_venda()
            text: "Adicionar Venda"
            pos_hint: {"right": 0.95, "top": 0.2}
            size_hint: 0.4, 0.2
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state=="normal" else "icones/botao_apertado.png"


        #preço
        GridLayout:
            rows:1
            pos_hint: {"right":0.9, "top": 0.355}
            size_hint: 0.8, 0.075
            Label:
                text: "Preço total (R$)"
                id: label_preco
            TextInput:
                hint_text: "Digite apenas números"
                id: preco_total   

        #quantidade
        GridLayout:
            rows:1
            pos_hint: {"right":0.9, "top": 0.275}
            size_hint: 0.8, 0.075
            Label:
                text: "Quantidade total"
                id: label_quantidade
            TextInput:
                hint_text: "0"
                id: quantidade


       